            }
          },
          "400": {
            "description": "Failure response"
          }
        }
      }
    },
    "/schedule/ssh": {
      "post": {
        "tags": [
          "schedule"
        ],
        "summary": "Schedule SSH collection",
        "operationId": "postScheduleSsh",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/lca_internal_pkg_dto.ScheduleSSHCollectionDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response",
            "schema": {
              "$ref": "#/definitions/lca_internal_pkg_dto.ScheduleResponseDto"
            }
          },
          "400": {
            "description": "Failure response"
          }
        }
      }
    },
    "/terminate": {
      "post": {
        "tags": [
          "schedule"
        ],
        "summary": "Terminate log collection",
        "operationId": "postTerminate",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Terminate request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/lca_internal_pkg_dto.TerminateRequestDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response",
