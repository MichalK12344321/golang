    "/version": {
      "get": {
        "summary": "Get application version",
        "operationId": "getVersion",
        "produces": [
          "text/plain"
        ],
        "consumes": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Version number",
            "schema": {
              "$ref": "#/definitions/lca_api_server.ValueObject"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "lca_api_server.ValueObject": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        }
      }
    },
    "lca_internal_pkg_dto.RunScheduleDto": {
      "type": "object",
      "properties": {
        "collectionId": {
          "type": "string"
        },
        "runId": {
          "type": "string"
        }
      }
    },
    "lca_internal_pkg_dto.ScheduleGoCollectionDto": {
      "type": "object",
      "required": [
        "script",
        "timeout"
      ],
      "properties": {
        "cron": {
          "type": "string",
          "description": "cron for repeat collection - leave empty if one off",
          "example": "* * * * *"
        },
        "repeat": {
          "type": "boolean",
          "example": "false"
        },
        "script": {
          "type": "string",
          "example": "package main; func main(){return}"
        },
        "timeout": {
          "type": "string",
          "example": "5s"
        }
      }
    },
    "lca_internal_pkg_dto.ScheduleResponseDto": {
      "type": "object",
      "required": [
        "runs"
      ],
      "properties": {
        "runs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/lca_internal_pkg_dto.RunScheduleDto"
          }
        }
      }
    },
    "lca_internal_pkg_dto.ScheduleSSHCollectionDto": {
      "type": "object",
      "required": [
        "targets",
        "script",
        "timeout"
      ],
      "properties": {
        "cron": {
          "type": "string",
          "description": "cron for repeat collection - leave empty if one off",
          "example": "* * * * *"
        },
        "repeat": {
          "type": "boolean",
          "example": "false"
        },
        "script": {
          "type": "string",
          "example": "/scripts/hello.sh"
        },
        "targets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/lca_internal_pkg_dto.TargetDto"
          }
        },
        "timeout": {
          "type": "string",
          "example": "1m"
        }
      }
    },
    "lca_internal_pkg_dto.TargetDto": {
      "type": "object",
      "required": [
        "host",
        "port",
        "user",
        "password"
      ],
      "properties": {
        "host": {
          "type": "string",
          "example": "192.168.49.2"
        },
        "password": {
          "type": "string",
          "example": "root"
        },
        "port": {
          "type": "integer",
          "format": "int32",
          "example": "30022"
        },
        "user": {
          "type": "string",
          "example": "root"
        }
      }
    },
    "lca_internal_pkg_dto.TerminateRequestDto": {
      "type": "object",
      "required": [
        "runId"
      ],
      "properties": {
        "runId": {
          "type": "string",
          "example": "a0a73fd7-1161-4b5b-bce7-01907c1353c9"
        }
      }
    },
    "lca_internal_pkg_dto.TerminateResponseDto": {
      "type": "object"
    }
  }
}